{ pkgs, lib, ... }:

{
  imports = [./plugins];

  programs = {
    neovim = {
      enable = true;
      viAlias = true;
      vimAlias = true;
      vimdiffAlias = true;
      extraConfig = ''
        syntax enable
        set number
        set showtabline=2
        set tabstop=2
        set shiftwidth=2
        set expandtab
      '';
    };
  };

  home.file.neovim = {
    source = ./lua;
    target = ".config/nvim/lua";
    recursive = true;
  };

  home.packages = with pkgs; [
    rnix-lsp
  ];
}
